{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="css/admin.css">{% endblock %}

{% block title %}
    {{ trans(title) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h2>{{ trans('event.title.all') }}</h2>

            <table class="points_table">
                <thead>
                <tr>
                    <th class="col-xs-2">{{ trans('event.title') }}</th>
                    <th class="col-xs-6">{{ trans('event.description') }}</th>
                    <th class="col-xs-1">{{ trans('event.date') }}</th>
                    <th class="col-xs-1">{{ trans('event.speaker') }}</th>
                    <th class="col-xs-1">{{ trans('event.location') }}</th>
                    <th class="col-xs-1">{{ trans('event.delete') }}</th>
                </tr>
                </thead>

                <tbody class="points_table_scrollbar">
                {% for key,value in event_array %}
                    {% if  loop.index is odd %}
                        <tr class="odd"> {% else %} <tr class="even"> {% endif %}
                    <td class="col-xs-2">{{ value.title }}</td>
                    <td class="col-xs-6">{{ value.description }}</td>
                    <td class="col-xs-1">{{ value.dateTime }}</td>
                    <td class="col-xs-1">{{ value.speaker }}</td>
                    <td class="col-xs-1">{{ value.location }}</td>
                    <td class="col-xs-1">
                        <a class="btn icon-btn btn-danger" href="/event/delete/{{ value.id }}"><span
                                    class="glyphicon btn-glyphicon glyphicon-trash img-circle text-danger"></span>
                            Delete</a>
                    </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}