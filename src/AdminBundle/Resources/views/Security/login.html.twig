{% extends "::base.html.twig" %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="mdl-grid">
        <div class="mdl-cell"></div>
        <div class="mdl-shadow--4dp mdl-cell mdl-cell--middle mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" required type="text" id="username" name="_username">
                    <label class="mdl-textfield__label" for="username">Username</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" required type="password" id="password" name="_password">
                    <label class="mdl-textfield__label" for="username">Password</label>
                </div>
            </div>
            <div class="mdl-cell">
                <button class="mdl-button mdl-js-button mdl-js-ripple-effect">
                    Login
                </button>
            </div>
        </div>
    </div>
{% endblock %}
